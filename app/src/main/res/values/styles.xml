<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.PreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <item name="dialogCornerRadius">12dp</item>
    </style>

    <style name="AppTheme.FullScreenDialog.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppTheme.Tabs" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.Tabs.Text</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabRippleColor">#00000000</item>
    </style>

    <style name="AppTheme.Tabs.Text" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/ps_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Tabs.Caps" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.Tabs.Text</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabRippleColor">#00000000</item>
    </style>

    <style name="AppTheme.Tabs.Text.Caps" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>