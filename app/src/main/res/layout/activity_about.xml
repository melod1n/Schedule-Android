<?xml version="1.0" encoding="utf-8"?>
<ru.melod1n.schedule.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ru.melod1n.schedule.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_backward" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="Schedule Logo"
            android:src="@drawable/ic_launcher_hi_res"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/aboutAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/google_sans_medium"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/aboutAppVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:textColor="#a4a4a4"
            android:textSize="12sp"
            tools:text="Version" />

        <include
            layout="@layout/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ru.melod1n.schedule.widget.FrameLayout>

